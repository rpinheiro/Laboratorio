@model IEnumerable<LabVet.Models.Veterinario>

@{
    ViewBag.Title = "Cadastro de Veterinário";
}

<h2>Cadastro de Veterinário</h2>

<p>
    @Html.ActionLink("Adicionar novo", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Crmv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Crmv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.PessoaID }) |
            @Html.ActionLink("Apagar", "Delete", new { id=item.PessoaID })
        </td>
    </tr>
}

</table>
